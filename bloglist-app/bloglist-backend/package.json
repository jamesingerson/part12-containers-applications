{
  "name": "bloglist-backend",
  "version": "0.0.1",
  "description": "Back end for the Full Stack Open Blog List application",
  "main": "index.js",
  "scripts": {
    "start": "PORT=3003 NODE_ENV=production node index.js",
    "dev": "PORT=3003 nodemon ./bin/www",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --forceExit",
    "build:ui": "rm -rf build && cd ../notes/ && npm run build && cp -r build ../notes-backend",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "start:test": "cross-env NODE_ENV=test node index.js"
  },
  "author": "James Ingerson",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.3"
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "nodemon": "^2.0.18",
    "supertest": "^6.2.4"
  }
}